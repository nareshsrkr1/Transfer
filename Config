#!/bin/bash

count=0
for dir in /data/*; do
    if [ "$count" -ge 10 ]; then
        break
    fi
    du_output=$(du -sh "$dir" 2>/dev/null)
    size=$(echo "$du_output" | awk '{print $1}')
    if [[ "$size" =~ G && "${size/G/}" -gt 10 ]]; then
        echo "$dir: $size"
        ((count++))
    fi
done | parallel -j10
